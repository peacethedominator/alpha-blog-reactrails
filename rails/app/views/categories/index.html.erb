<div class="card" style="margin: 20px 400px; background-color: black">
  <h1 class="text-center mt-4" id="logo1">Categories</h1>

  <div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
  </div>
  <hr class="hr hr-blurry" style="background-color: yellowgreen; margin-left:20px; margin-right:20px;" />

  <div class="container">
    <% @categories.each do |category| %>
      <div class="row justify-content-md-center">
        <div class="col-6 mt-4">
          <div class="card text-center shadow mb-5 rounded" >
            <div class="card-body">
              <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-success" %></h5>
              <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
            </div>
            <div class="card-footer text-muted">
              <small>Created <%= time_ago_in_words(category.created_at) %> ago, 
              edited <%= time_ago_in_words(category.updated_at) %> ago</small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <hr class="hr hr-blurry" style="background-color: yellowgreen; margin: -10px 20px 20px 20px;" />
  <div class="flickr_pagination mb-4">
    <%= will_paginate @categories, :container => false %>
  </div>
</div>